<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorWarning">@color/warning_yellow</item>
        <item name="colorSuccess">@color/success_green</item>
    </style>

    <style name="BubbleTextView" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:background">@drawable/rounded_corners</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:paddingStart">3dp</item>
        <item name="android:paddingEnd">3dp</item>
    </style>

    <style name="ErrorTextView" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:layout_marginStart">15dp</item>
        <item name="android:layout_marginEnd">15dp</item>
        <item name="android:textColor">?attr/colorError</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="Text.Heading2" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
